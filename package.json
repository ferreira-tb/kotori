{
  "name": "kotori",
  "productName": "Kotori",
  "version": "0.1.1",
  "description": "Multiplatform manga reader",
  "packageManager": "pnpm@8.12.1",
  "type": "module",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
    "url": "https://github.com/ferreira-tb"
  },
  "license": "MIT",
  "private": true,
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write",
    "*.{?(c|m)@(j|t)s,vue}": "pnpm lint"
  },
  "scripts": {
    "build": "pnpm type-check && vite build",
    "deps": "pnpm exec taze -f -w -l",
    "dev": "vite",
    "format": "pnpm exec prettier . --write",
    "format-check": "pnpm exec prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky install",
    "preview": "vite preview",
    "tauri": "tauri",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.2"
  },
  "devDependencies": {
    "@octokit/core": "^5.0.2",
    "@tauri-apps/cli": "^1.5.8",
    "@tb-dev/eslint-config": "^1.4.6",
    "@types/node": "^20.10.4",
    "@vitejs/plugin-vue": "^5.0.2",
    "@vitest/ui": "^1.0.4",
    "@vueuse/core": "^10.7.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "miho": "^2.2.2",
    "npm-run-all2": "^6.1.1",
    "pinia": "^2.1.7",
    "prettier": "^3.1.1",
    "taze": "^0.13.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-vue-devtools": "1.0.0-rc.8",
    "vitest": "^1.0.4",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.27"
  }
}
