{
  "name": "@kotori/monorepo",
  "version": "0.1.0",
  "description": "Multiplatform manga reader",
  "type": "module",
  "packageManager": "pnpm@9.6.0",
  "private": true,
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "cargo tauri build --no-bundle",
    "build:dev": "cargo tauri build --no-bundle --features devtools",
    "bundle": "cargo tauri build",
    "clippy": "cargo clippy",
    "dev": "cargo tauri dev",
    "format": "prettier . --write && cargo fmt --all",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "lint:fix": "eslint . --config eslint.config.js --cache --fix",
    "prepare": "husky",
    "type-check": "pnpm run -r --bail type-check",
    "update": "miho update -t"
  },
  "devDependencies": {
    "@tb-dev/auto-import-config": "^3.1.0",
    "@tb-dev/eslint-config": "^4.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.11",
    "@vitejs/plugin-vue": "^5.0.5",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.6",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "unplugin-auto-import": "^0.18.0",
    "vite": "^5.3.4",
    "vite-plugin-vue-devtools": "^7.3.6",
    "vue-tsc": "^2.0.28"
  }
}
