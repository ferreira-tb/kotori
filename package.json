{
  "name": "kotori",
  "version": "0.1.0",
  "description": "Multiplatform manga reader",
  "type": "module",
  "packageManager": "pnpm@8.14.1",
  "private": true,
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "cargo tauri build",
    "dev": "cargo tauri dev",
    "format": "prettier . --write && cargo fmt --manifest-path=src-tauri/Cargo.toml",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky install",
    "type-check": "vue-tsc --noEmit",
    "vite:dev": "vite",
    "vite:build": "pnpm run type-check && vite build"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@vueuse/core": "^10.7.2",
    "manatsu": "^0.2.21",
    "pinia": "^2.1.7",
    "vue": "~3.3.13",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^1.5.15",
    "@tb-dev/utility-types": "^1.0.10",
    "@types/node": "^20.11.2",
    "@vitejs/plugin-vue": "~4.6.2",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.2",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "taze": "^0.13.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-vue-devtools": "^7.0.10",
    "vue-tsc": "^1.8.27"
  }
}
