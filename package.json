{
  "name": "kotori",
  "version": "0.1.0",
  "description": "Multiplatform manga reader",
  "type": "module",
  "packageManager": "pnpm@8.14.1",
  "private": true,
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "cargo tauri build",
    "dev": "cargo tauri dev",
    "format": "prettier . --write && cargo fmt --manifest-path=src-tauri/Cargo.toml",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky install",
    "type-check": "vue-tsc --noEmit",
    "vite:dev": "vite",
    "vite:build": "pnpm run type-check && vite build"
  },
  "dependencies": {
    "@manatsu/style": "^0.5.8",
    "@tauri-apps/api": "^1.5.3",
    "@vueuse/core": "^10.9.0",
    "manatsu": "^0.5.8",
    "pinia": "^2.1.7",
    "vue": "~3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@tb-dev/auto-import-config": "^1.1.1",
    "@tb-dev/eslint-config": "^3.2.2",
    "@tb-dev/utility-types": "^1.2.2",
    "@tb-dev/vue-import-config": "^1.0.3",
    "@types/node": "^20.11.30",
    "@vitejs/plugin-vue": "~5.0.4",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.37",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "sass": "^1.72.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.6",
    "vite-plugin-vue-devtools": "^7.0.19",
    "vue-tsc": "^2.0.6"
  }
}
