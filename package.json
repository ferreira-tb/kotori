{
  "name": "kotori",
  "version": "0.1.0",
  "description": "Multiplatform manga reader",
  "type": "module",
  "packageManager": "pnpm@9.1.1",
  "private": true,
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "cargo tauri build",
    "build:dev": "cargo tauri build --no-bundle --features devtools",
    "build:fresh": "cargo tauri build --no-bundle --features fresh",
    "clippy": "cargo clippy",
    "dev": "cargo tauri dev",
    "dev:console": "cargo tauri dev --features tokio-console",
    "format": "prettier . --write && cargo fmt --all",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "lint-fix": "eslint . --config eslint.config.js --cache --fix",
    "prepare": "husky",
    "tokio-console": "tokio-console --retain-for 5s",
    "type-check": "vue-tsc --noEmit",
    "update": "miho update -t",
    "vite-dev": "vite",
    "vite-build": "pnpm run type-check && vite build"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0-beta.11",
    "@tauri-apps/plugin-clipboard-manager": "2.1.0-beta.1",
    "@tauri-apps/plugin-dialog": "2.0.0-beta.3",
    "@tauri-apps/plugin-http": "^2.0.0-beta.3",
    "@tauri-apps/plugin-shell": "2.0.0-beta.4",
    "@tauri-apps/plugin-store": "2.0.0-beta.3",
    "@tb-dev/utility-types": "^1.4.0",
    "@tb-dev/utils": "^1.8.3",
    "@vueuse/core": "^10.11.0",
    "@vueuse/math": "^10.11.0",
    "@vueuse/router": "^10.11.0",
    "manatsu": "^0.11.7",
    "pinia": "^2.1.7",
    "primeicons": "^7.0.0",
    "primevue": "^3.52.0",
    "vue": "^3.4.30",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@tb-dev/auto-import-config": "^1.6.10",
    "@tb-dev/eslint-config": "^3.8.3",
    "@tb-dev/vue-import-config": "^1.2.1",
    "@types/node": "^20.14.8",
    "@vitejs/plugin-vue": "^5.0.5",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-vue-components": "^0.27.0",
    "vite": "^5.2.11",
    "vite-plugin-vue-devtools": "^7.3.4",
    "vue-tsc": "^2.0.22"
  }
}
