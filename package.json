{
  "name": "kotori",
  "version": "0.1.0",
  "description": "Multiplatform manga reader",
  "type": "module",
  "packageManager": "pnpm@9.4.0",
  "private": true,
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "cargo tauri build --no-bundle",
    "build:dev": "cargo tauri build --no-bundle --features devtools",
    "build:ephemeral": "cargo tauri build --no-bundle --features ephemeral",
    "bundle": "cargo tauri build",
    "clippy": "cargo clippy",
    "dev": "cargo tauri dev",
    "format": "prettier . --write && cargo fmt --all",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "lint-fix": "eslint . --config eslint.config.js --cache --fix",
    "prepare": "husky",
    "type-check": "vue-tsc --noEmit",
    "update": "miho update -t",
    "vite-dev": "vite",
    "vite-build": "pnpm run type-check && vite build"
  },
  "dependencies": {
    "@radix-icons/vue": "^1.0.0",
    "@tauri-apps/api": "^2.0.0-beta.13",
    "@tauri-apps/plugin-clipboard-manager": "^2.1.0-beta.3",
    "@tauri-apps/plugin-dialog": "^2.0.0-beta.5",
    "@tauri-apps/plugin-http": "^2.0.0-beta.6",
    "@tauri-apps/plugin-shell": "^2.0.0-beta.6",
    "@tauri-apps/plugin-store": "^2.0.0-beta.5",
    "@tb-dev/utility-types": "^1.4.0",
    "@tb-dev/utils": "^1.8.3",
    "@vueuse/components": "^10.11.0",
    "@vueuse/core": "^10.11.0",
    "@vueuse/math": "^10.11.0",
    "@vueuse/router": "^10.11.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.397.0",
    "manatsu": "^0.11.7",
    "pinia": "^2.1.7",
    "radix-vue": "^1.8.5",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.4.30",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@tb-dev/auto-import-config": "^2.2.5",
    "@tb-dev/eslint-config": "^3.8.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.9",
    "@vitejs/plugin-vue": "^5.0.5",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "unplugin-auto-import": "^0.17.6",
    "vite": "^5.3.1",
    "vite-plugin-vue-devtools": "^7.3.4",
    "vue-tsc": "^2.0.22"
  }
}
