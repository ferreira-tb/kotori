{
  "name": "kotori",
  "version": "0.1.0",
  "description": "Multiplatform manga reader",
  "type": "module",
  "packageManager": "pnpm@8.15.5",
  "private": true,
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "cargo tauri build",
    "clippy": "cargo clippy",
    "dev": "cargo tauri dev",
    "format": "prettier . --write && cargo fmt",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky",
    "type-check": "vue-tsc --noEmit",
    "update": "miho update -t",
    "vite:dev": "vite",
    "vite:build": "pnpm run type-check && vite build"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0-beta.7",
    "@tauri-apps/plugin-http": "2.0.0-beta.2",
    "@tb-dev/utils": "^1.5.0",
    "@vueuse/core": "^10.9.0",
    "@vueuse/math": "^10.9.0",
    "@vueuse/router": "^10.9.0",
    "manatsu": "^0.9.5",
    "pinia": "^2.1.7",
    "primevue": "^3.51.0",
    "vue": "~3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@tb-dev/auto-import-config": "^1.3.3",
    "@tb-dev/eslint-config": "^3.4.0",
    "@tb-dev/utility-types": "^1.2.5",
    "@tb-dev/vue-import-config": "^1.1.2",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-vue": "~5.0.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.2.8",
    "vite-plugin-vue-devtools": "^7.0.27",
    "vue-tsc": "^2.0.12"
  }
}
