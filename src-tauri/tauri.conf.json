{
  "productName": "kotori",
  "version": "0.1.0",
  "identifier": "tbdev.kotori",
  "build": {
    "beforeDevCommand": "pnpm run vite:dev",
    "beforeBuildCommand": "pnpm run vite:build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1422"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Kotori",
        "url": "src/windows/main/index.html",
        "width": 800,
        "height": 600,
        "visible": false,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": ["$APPCACHE/**", "$APPCONFIG/**", "$APPDATA/**"],
        "enable": true
      },
      "csp": "default-src 'self'; img-src 'self' blob: https://asset.localhost; connect-src http://ipc.localhost"
    }
  },
  "plugins": {
    "shell": {
      "open": "https://github.com/ferreira-tb/kotori"
    }
  }
}
